h3.text-center {{name | uppercase}}

.row
  .col-md-4.col-md-offset-4.col-xs-10.col-xs-offset-1
    form(name='userForm', novalidate)
      .form-group
        label(for='email') Email
        input.form-control#email(type='email', name='email', ng-model='user.email')
      .form-group
        label(for='password') Password
        input.form-control#password(type='password', name='password', ng-model='user.password')
      .form-group
        button.btn.btn-info.form-control(ng-click='submit(user)') Submit
      .form-group
        a(ui-sref='register') Need To Register?
