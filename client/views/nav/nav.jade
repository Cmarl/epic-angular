nav.navbar.navbar-default(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') convergence
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left(ng-show='activeUser')
        li: a(ui-sref='home'): i.fa.fa.fa-home &nbsp; Feed
        li: a(ui-sref='saved'): i.fa.fa-server &nbsp; Saved
        li: a(ui-sref='about'): i.fa.fa.fa-info &nbsp; About
        li: a(ui-sref='dashboard'): i.fa.fa-dashboard &nbsp; Dashboard
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a(ng-click='logout()').pointer: i.fa.fa-sign-out &nbsp; {{displayName}}
      ul.nav.navbar-nav.navbar-left(ng-hide='activeUser')
        li: a(ui-sref='home'): i.fa.fa.fa-home &nbsp; Feed
        li: a(ui-sref='about'): i.fa.fa.fa-info &nbsp; About
        li: a(ui-sref='login'): i.fa.fa-key &nbsp; Login
